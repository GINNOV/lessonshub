// file: prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                        String    @id @default(cuid())
  name                      String?
  email                     String    @unique
  hashedPassword            String?
  emailVerified             DateTime?
  image                     String?
  timeZone                  String?
  weeklySummaryOptOut       Boolean   @default(false)
  lessonAutoSaveOptOut      Boolean   @default(false)
  gender                    Gender    @default(BINARY)
  role                      Role      @default(STUDENT)
  lastSeen                  DateTime?
  impersonatedById          String?   @unique
  isPaying                  Boolean   @default(false)
  isSuspended               Boolean   @default(false)
  isTakingBreak             Boolean   @default(false)
  lastPaymentReminderSentAt DateTime?
  totalPoints               Int       @default(0)

  // For students, the teachers they are assigned to.
  teachers                  TeachersForStudent[] @relation("StudentTeachers")
  // For teachers, the students they have assigned.
  students                  TeachersForStudent[] @relation("TeacherStudents")

  // Referral Program Fields
  referralCode              String?   @unique
  referrerId                String?
  referrer                  User?     @relation("UserReferrals", fields: [referrerId], references: [id], onDelete: SetNull, onUpdate: NoAction)
  referrals                 User[]    @relation("UserReferrals")
  referralRewardPercent     Decimal   @default(35)
  referralRewardMonthlyAmount Decimal @default(100)
  readAlongPoints           Int       @default(0)

  impersonatedBy            User?     @relation("Impersonation", fields: [impersonatedById], references: [id], onDelete: Restrict, onUpdate: Restrict)
  impersonating             User?     @relation("Impersonation")

  accounts                  Account[]
  sessions                  Session[]
  lessons                   Lesson[]
  assignments               Assignment[]
  pointTransactions         PointTransaction[]
  leaderboardSnapshots      LeaderboardSnapshot[]
  badges                    UserBadge[]
  goldStarsReceived         GoldStar[]         @relation("GoldStarsReceived")
  goldStarsSent             GoldStar[]         @relation("GoldStarsSent")
  classes                   Class[]
  loginEvents               LoginEvent[]
  defaultLessonPrice        Decimal?
  defaultLessonPreview      String?   @db.Text
  defaultLessonNotes        String?   @db.Text
  defaultLessonInstructions String?   @db.Text
  teacherBio                String?   @db.Text
  studentBio                String?   @db.Text
  lyricLessonAttempts       LyricLessonAttempt[]
  guideCompletions          GuideCompletion[]
  instructionBooklets       InstructionBooklet[]
  couponRedemptions         CouponRedemption[]
  teacherRatingsGiven       TeacherRating[] @relation("StudentRatings")
  teacherRatingsReceived    TeacherRating[] @relation("TeacherRatings")

  // Customizable dashboard fields
  progressCardTitle         String?   @default("My Progress")
  progressCardBody          String?   @default("Total value from all graded lessons.")
  progressCardLinkText      String?   @default("Invest in your future - watch now")
  progressCardLinkUrl       String?   @default("https://www.youtube.com/embed/kd8zMU3kd0s?si=j0X6hdJqhcXDYn3g&amp;controls=0")
  assignmentSummaryFooter   String?
  hasAdminPortalAccess      Boolean   @default(false)
  uiLanguage                String    @default("device")
}

model TeachersForStudent {
  studentId String
  student   User   @relation("StudentTeachers", fields: [studentId], references: [id], onDelete: Cascade)
  teacherId String
  teacher   User   @relation("TeacherStudents", fields: [teacherId], references: [id], onDelete: Cascade)
  classId   String?
  class     Class? @relation(fields: [classId], references: [id], onDelete: SetNull)

  @@id([studentId, teacherId])
}

model Class {
  id        String   @id @default(cuid())
  name      String
  isActive  Boolean  @default(true)
  teacherId String
  teacher   User     @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  students  TeachersForStudent[]
  createdAt DateTime @default(now())
}

model Lesson {
  id                        String                 @id @default(cuid())
  title                     String
  type                      LessonType             @default(STANDARD)
  lesson_preview            String?
  assignment_text           String?
  questions                 Json?
  assignment_image_url      String?
  guideCardImage            String?
  soundcloud_url            String?
  context_text              String?
  attachment_url            String?
  notes                     String?
  difficulty                Int       @default(3)
  assignment_notification   AssignmentNotification @default(NOT_ASSIGNED)
  scheduled_assignment_date DateTime?
  createdAt                 DateTime               @default(now())
  updatedAt                 DateTime               @updatedAt
  teacherId                 String?
  price                     Decimal                @default(0)
  isFreeForAll              Boolean                @default(false)
  public_share_id           String?
  guideIsVisible            Boolean                @default(true)
  guideIsFreeForAll         Boolean                @default(false)
  teacher                   User?                  @relation(fields: [teacherId], references: [id], onDelete: SetNull)
  assignments               Assignment[]
  flashcards                Flashcard[]
  loginEvents               LoginEvent[]
  learningSessionCards      LearningSessionCard[]
  multiChoiceQuestions      MultiChoiceQuestion[]
  newsArticleConfig         NewsArticleLessonConfig?
  lyricConfig               LyricLessonConfig?
  composerConfig            ComposerLessonConfig?
  arkaningConfig            ArkaningLessonConfig?
  flipperConfig             FlipperLessonConfig?
  lyricAttempts             LyricLessonAttempt[]
  guideCompletions          GuideCompletion[]
  flipperTiles              FlipperTile[]
}

model Flashcard {
  id                 String  @id @default(cuid())
  term               String
  definition         String
  termImageUrl       String? // Replaces imageUrl
  definitionImageUrl String? // New field for the back of the card
  lessonId           String
  lesson             Lesson  @relation(fields: [lessonId], references: [id], onDelete: Cascade)
}

model LearningSessionCard {
  id        String   @id @default(cuid())
  orderIndex Int
  content1  String   @db.Text
  content2  String   @db.Text
  content3  String?  @db.Text
  content4  String?  @db.Text
  extra     String?  @db.Text
  lessonId  String
  lesson    Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([lessonId])
}

model CouponCode {
  id              String             @id @default(cuid())
  code            String             @unique
  description     String?
  maxRedemptions  Int                @default(1)
  redemptionCount Int                @default(0)
  isActive        Boolean            @default(true)
  expiresAt       DateTime?
  redemptions     CouponRedemption[]
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @default(now()) @updatedAt
}

model CouponRedemption {
  id        String     @id @default(cuid())
  couponId  String
  coupon    CouponCode @relation(fields: [couponId], references: [id], onDelete: Cascade)
  userId    String
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime   @default(now())

  @@unique([couponId, userId])
}

model MultiChoiceQuestion {
  id       String              @id @default(cuid())
  question String
  lessonId String
  options  MultiChoiceOption[]
  lesson   Lesson              @relation(fields: [lessonId], references: [id], onDelete: Cascade)
}

model MultiChoiceOption {
  id         String              @id @default(cuid())
  text       String
  isCorrect  Boolean             @default(false)
  questionId String
  question   MultiChoiceQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)
}

model TeacherRating {
  id              String   @id @default(cuid())
  studentId       String
  student         User     @relation("StudentRatings", fields: [studentId], references: [id], onDelete: Cascade)
  teacherId       String
  teacher         User     @relation("TeacherRatings", fields: [teacherId], references: [id], onDelete: Cascade)
  contentQuality  Int      @default(0)
  helpfulness     Int      @default(0)
  communication   Int      @default(0)
  valueForMoney   Int      @default(0)
  overall         Int?
  comments        String?  @db.Text
  createdAt       DateTime @default(now())

  @@index([teacherId])
  @@index([studentId])
}

model LyricLessonConfig {
  id              String   @id @default(cuid())
  lessonId        String   @unique
  lesson          Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  audioUrl        String
  audioStorageKey String?
  timingSourceUrl String?
  lrcUrl          String?
  lrcStorageKey   String?
  rawLyrics       String   @db.Text
  lines           Json
  settings        Json?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model AppConfig {
  id           Int      @id @default(1)
  geminiApiKey String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model LyricLessonAttempt {
  id               String   @id @default(cuid())
  lessonId         String
  lesson           Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  studentId        String
  student          User     @relation(fields: [studentId], references: [id], onDelete: Cascade)
  scorePercent     Decimal?
  timeTakenSeconds Int?
  answers          Json?
  readModeSwitchesUsed Int?
  createdAt        DateTime @default(now())

  @@index([lessonId])
  @@index([studentId])
}

model Assignment {
  id                  String           @id @default(cuid())
  assignedAt          DateTime         @default(now())
  startDate           DateTime         @default(now())
  deadline            DateTime
  originalDeadline    DateTime?
  status              AssignmentStatus @default(PENDING)
  score               Int?
  gradedAt            DateTime?
  studentNotes        String?
  rating              Int?
  answers             Json?
  draftAnswers        Json?
  draftStudentNotes   String?
  draftRating         Int?
  draftUpdatedAt      DateTime?
  teacherComments     String?
  teacherAnswerComments Json?
  pointsAwarded        Int       @default(0)
  extraPoints          Int       @default(0)
  reminderSentAt      DateTime?
  milestoneNotified   Boolean          @default(false)
  notifyOnStartDate   Boolean          @default(true) // New field for scheduled notifications
  pastDueWarningSentAt DateTime?
  gradedByTeacher     Boolean          @default(false)
  lessonId            String
  studentId           String
  lesson              Lesson           @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  student             User             @relation(fields: [studentId], references: [id], onDelete: Cascade)
  pointTransactions   PointTransaction[]
  badgeAwards         UserBadge[]
  lyricDraftAnswers   Json?
  lyricDraftMode      String?
  lyricDraftReadSwitches Int?
  lyricDraftUpdatedAt DateTime?
  newsArticleTapCount Int       @default(0)

  @@unique([lessonId, studentId])
}

model InstructionBooklet {
  id        String   @id @default(cuid())
  title     String
  body      String   @db.Text
  teacherId String
  teacher   User     @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model EmailTemplate {
  id          String   @id @default(cuid())
  name        String   @unique
  subject     String
  body        String
  buttonColor String?
  description String?
  category    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model LoginEvent {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  lessonId   String?
  lesson     Lesson?  @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime @default(now())

  @@index([userId])
  @@index([lessonId])
}

model GuideCompletion {
  id         String   @id @default(cuid())
  studentId  String
  guideId    String
  completedAt DateTime @default(now())
  student    User     @relation(fields: [studentId], references: [id], onDelete: Cascade)
  guide      Lesson   @relation(fields: [guideId], references: [id], onDelete: Cascade)

  @@unique([studentId, guideId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Badge {
  id          String        @id @default(cuid())
  slug        String        @unique
  name        String
  description String
  category    BadgeCategory @default(PROGRESSION)
  icon        String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  userBadges  UserBadge[]
}

model UserBadge {
  id           String     @id @default(cuid())
  userId       String
  badgeId      String
  assignmentId String?
  awardedAt    DateTime   @default(now())
  metadata     Json?
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  badge        Badge      @relation(fields: [badgeId], references: [id], onDelete: Cascade)
  assignment   Assignment? @relation(fields: [assignmentId], references: [id], onDelete: SetNull)

  @@unique([userId, badgeId])
  @@index([badgeId])
}

model PointTransaction {
  id           String       @id @default(cuid())
  userId       String
  assignmentId String?
  points       Int
  amountEuro   Decimal?
  reason       PointReason
  note         String?
  createdAt    DateTime     @default(now())
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  assignment   Assignment?  @relation(fields: [assignmentId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([assignmentId])
}

model LeaderboardSnapshot {
  id        String   @id @default(cuid())
  userId    String
  euros     Decimal
  points    Int
  lessons   Int
  rank      Int
  eventKey  String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([rank])
  @@index([createdAt])
}

model GoldStar {
  id         String   @id @default(cuid())
  studentId  String
  teacherId  String
  message    String?  @db.Text
  amountEuro Int      @default(200)
  points     Int      @default(11)
  createdAt  DateTime @default(now())

  student User @relation("GoldStarsReceived", fields: [studentId], references: [id], onDelete: Cascade)
  teacher User @relation("GoldStarsSent", fields: [teacherId], references: [id], onDelete: Cascade)

  @@index([studentId])
  @@index([teacherId])
}

enum Role {
  STUDENT
  TEACHER
  ADMIN
}

enum Gender {
  MALE
  FEMALE
  BINARY
}

enum LessonType {
  STANDARD
  FLASHCARD
  MULTI_CHOICE
  LEARNING_SESSION
  NEWS_ARTICLE
  LYRIC
  COMPOSER
  ARKANING
  FLIPPER
}

model NewsArticleLessonConfig {
  id          String   @id @default(cuid())
  lessonId    String   @unique
  markdown    String   @db.Text
  maxWordTaps Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  lesson      Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
}

model ComposerLessonConfig {
  id             String   @id @default(cuid())
  lessonId       String   @unique
  hiddenSentence String   @db.Text
  questionBank   Json
  maxTries       Int      @default(1)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  lesson         Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
}

model ArkaningLessonConfig {
  id               String   @id @default(cuid())
  lessonId         String   @unique
  questionBank     Json
  roundsPerCorrect Int      @default(3)
  pointsPerCorrect Int      @default(10)
  eurosPerCorrect  Int      @default(5)
  lives            Int      @default(5)
  loseLifeOnWrong  Boolean  @default(true)
  wrongsPerLife    Int      @default(1)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  lesson           Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
}

model FlipperLessonConfig {
  id                    String   @id @default(cuid())
  lessonId              String   @unique
  attemptsBeforePenalty Int      @default(3)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  lesson                Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
}

model FlipperTile {
  id        String   @id @default(cuid())
  lessonId  String
  imageUrl  String
  word      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lesson    Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@index([lessonId])
}

enum AssignmentNotification {
  NOT_ASSIGNED
  ASSIGN_AND_NOTIFY
  ASSIGN_WITHOUT_NOTIFICATION
  ASSIGN_ON_DATE
}

enum AssignmentStatus {
  PENDING
  COMPLETED
  GRADED
  FAILED
}

enum NotificationStatus {
  SENT
  FAILED
}

model NotificationLog {
  id          String              @id @default(cuid())
  createdAt   DateTime            @default(now())
  templateName String
  to          String
  subject     String
  body        String              @db.Text
  status      NotificationStatus
  errorMessage String?
}

model StudentBanner {
  id        String   @id @default(cuid())
  kicker    String
  title     String
  body      String
  ctaText   String
  ctaHref   String   @default("/profile?tab=status")
  locale    String?
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum BadgeCategory {
  PROGRESSION
  PERFORMANCE
  PARTICIPATION
}

enum PointReason {
  ASSIGNMENT_GRADED
  BADGE_BONUS
  MANUAL_ADJUSTMENT
  ARKANING_GAME
  NEWS_ARTICLE_TAP
  MARKETPLACE_PURCHASE
  FLIPPER_MATCH
}
